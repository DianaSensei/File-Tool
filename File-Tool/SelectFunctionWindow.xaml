<Window x:Class="File_Tool.SelectFunctionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:local="clr-namespace:File_Tool"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Loaded="Window_Loaded"
        Title="SelectFunctionWindow" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Name="_stackpanelParent">
            <TextBlock VerticalAlignment="Center" Margin="50,0" HorizontalAlignment="Stretch" FontWeight="DemiBold" FontSize="20" Text="Select Function"/>
            <ComboBox Name="_comboboxSelect" Loaded="_comboboxSelect_Loaded" Margin="50,20" Height="35" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Height="35">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FindReplace" Foreground="ForestGreen" Width="24" Height="24" VerticalAlignment="Center"/>
                        <Label Content="Replace" Height="35" FontSize="15" FontWeight="DemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem Height="35">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FormatUppercase" Width="24" Height="24" VerticalAlignment="Center"/>
                        <Label Content="NewCase" Height="35" FontSize="15" FontWeight="DemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem Height="35">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="KeyRemove" Width="24" Height="24" VerticalAlignment="Center"/>
                        <Label Content="Move" Height="35" FontSize="15" FontWeight="DemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem Height="35">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Ornament" Width="24" Height="24" VerticalAlignment="Center"/>
                        <Label Content="Fullname Normalize"  Height="35" FontSize="15" FontWeight="DemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem Height="35">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="OneUp" Width="24" Height="24" VerticalAlignment="Center"/>
                        <Label Content="Unique Name" Height="35" FontSize="15" FontWeight="DemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </ComboBoxItem>
            </ComboBox>
            <StackPanel Name="_stackpanelParameterReplace">
                <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding Needle}" materialDesign:HintAssist.Hint="Find What" HorizontalContentAlignment="Center" Margin="50,15,50,0"/>
                <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding Hammer}" materialDesign:HintAssist.Hint="Replace By" HorizontalContentAlignment="Center" Margin="50,15,50,0"/>
            </StackPanel>
            <StackPanel Name="_stackpanelParameterNewCase">
                <ComboBox Margin="50,15,50,0" Height="35" SelectedIndex="{Binding Case}" materialDesign:HintAssist.Hint="Type">
                    <ComboBoxItem  Height="35">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FormatUppercase" Width="24" Height="24" VerticalAlignment="Center"/>
                            <Label Content="To UpperCase" Height="35" FontSize="15" FontWeight="DemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem  Height="35">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FormatLowercase" Width="24" Height="24" VerticalAlignment="Center"/>
                            <Label Content="To LowerCase" Height="35" FontSize="15" FontWeight="DemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem  Height="35">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FormatLetterCaseUpper" Width="24" Height="24" VerticalAlignment="Center"/>
                            <Label Content="To LetterCase Upper" Height="35" FontSize="15" FontWeight="DemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Name="_stackpanelParameterMove">
                <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding StartIndex}" materialDesign:HintAssist.Hint="Start Index" FlowDirection="RightToLeft" Margin="50,15,50,0"/>
                <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding Length}" materialDesign:HintAssist.Hint="Length" FlowDirection="RightToLeft" Margin="50,15,50,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Grid.Row="1">
            <Button Content="Cancel" Grid.Row="1" Width="80" Click="BtnCancelAddFunction_Click" Margin="30,0,30,0"/>
            <Button Content="Add" Grid.Row="1" Width="80" Click="BtnAddFunction_Click"/>
        </StackPanel>
    </Grid>
</Window>
